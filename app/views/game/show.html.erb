<% content_for :javascripts do %>
  <%= javascript_include_tag 'game' %>
<% end %>
<div id="game"
     data-current-configuration="<%= {day: ConfigVariables[:day].to_i,
                                      time: ConfigVariables[:time].to_i,
                                      genresByTime: Audience::GENRES_BY_TIME }.to_json %>"
     data-pusher-key="<%= Pusher.key %>"
     data-user-token="<%= current_user.authentication_token %>"
     data-user-company-json="<%= render 'company.json.rabl' %>"
     data-user-company-programs-json="<%= render 'programs.json.rabl' %>"
     data-user-company-ad-contracts-json="<%= render 'ad_contracts.json.rabl' %>">

  <h2>
    Starting game...
  </h2>

</div>
